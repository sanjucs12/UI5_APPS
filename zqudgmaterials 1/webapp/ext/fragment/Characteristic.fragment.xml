<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:tab="sap.ui.table" xmlns="sap.m" xmlns:sform="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield">
    <Panel backgroundDesign="Transparent">
        <sform:SmartForm id="CreateForm"  editable="true" editTogglable="false" >
            <sform:Group >
            <sform:GroupElement>
                    <smartField:SmartField id="Char::Reqid" value="{reqid}" editable="false"/>
                </sform:GroupElement>
                <sform:GroupElement>
                    <smartField:SmartField  id="Char::Matnr" value="{matnr}" editable="false"/>
                </sform:GroupElement>
                <sform:GroupElement>
                    <smartField:SmartField  id="Char::Classtype" value="{class_type}" editable="true"/>
                </sform:GroupElement>
                <sform:GroupElement>
                    <smartField:SmartField  id="Char::Classname" value="{class_name}" editable="true"/>
                </sform:GroupElement>              
            </sform:Group>        
           
        </sform:SmartForm>
    </Panel>
</core:FragmentDefinition>