<mvc:View controllerName="managepo.controller.PoDetails"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:objectPage="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartTable='sap.ui.comp.smarttable'
    xmlns:uitable="sap.ui.table"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">

    <objectPage:ObjectPageLayout id="idObjectPageLayout" showTitleInHeaderContent="false" upperCaseAnchorBar="false">

        <objectPage:headerContent>
            <smartFilterBar:SmartFilterBar id="smartFilterBar" entitySet="PurchaseOrderSet">
                <smartFilterBar:controlConfiguration>
                    <smartFilterBar:ControlConfiguration key="Ebeln" visibleInAdvancedArea="true" />
                </smartFilterBar:controlConfiguration>
            </smartFilterBar:SmartFilterBar>
        </objectPage:headerContent>
        <objectPage:sections>

            <objectPage:ObjectPageSection title="Section 1">
                <objectPage:subSections>
                    <objectPage:ObjectPageSubSection>
                        <objectPage:blocks>
                            <layout:VerticalLayout>
                                <Text text="section 1"/>
                            </layout:VerticalLayout>
                        </objectPage:blocks>
                    </objectPage:ObjectPageSubSection>
                </objectPage:subSections>
            </objectPage:ObjectPageSection>


            <objectPage:ObjectPageSection title="Section 2">
                <objectPage:subSections>
                    <objectPage:ObjectPageSubSection >
                        <objectPage:blocks>
                            <layout:VerticalLayout>
                                <Text text="section 2"/>
                            </layout:VerticalLayout>
                        </objectPage:blocks>
                    </objectPage:ObjectPageSubSection>
                </objectPage:subSections>
            </objectPage:ObjectPageSection>
        </objectPage:sections>
    </objectPage:ObjectPageLayout>
</mvc:View>
