<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">

    <Dialog title="Create Formula">
        <content>
            <VBox class="sapUiSmallMargin">
                <smartForm:SmartForm editable="true" id="idSmartFormCreateFormula">
                    <smartForm:Group>
                        <smartForm:GroupElement >
                            <smartField:SmartField value="{FormulaId}" mandatory="true"></smartField:SmartField>
                        </smartForm:GroupElement>
                        <smartForm:GroupElement >
                            <smartField:SmartField value="{MessageText}" mandatory="true"></smartField:SmartField>
                        </smartForm:GroupElement>
                    </smartForm:Group>
                </smartForm:SmartForm>
            </VBox>
        </content>
        <footer>
            <Toolbar >
                <content>
                    <ToolbarSpacer />
                    <Button text="Create" press="handle_fCreateFormula" type="Emphasized"/>
                    <Button text="Cancel" press="handle_fCancelformula"></Button>
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>