<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">

    <Dialog id="dialog_createNewStep" title="Create New Step">
        <content>
            <VBox class="sapUiSmallMargin">
                <smartForm:SmartForm editable="true">
                    <smartForm:Group>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_newStepName" value="{StepName}" entitySet="ZP_QU_DG_STEPS" change="handleInputChange"></smartField:SmartField>
                        </smartForm:GroupElement>
                             <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_newStepSequence" value="{StepSequence}" entitySet="ZP_QU_DG_STEPS" change="handleInputChange"></smartField:SmartField>
                        </smartForm:GroupElement>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_newStepType" value="{StepType}" entitySet="ZP_QU_DG_STEPS" change="handleInputChange"></smartField:SmartField>
                        </smartForm:GroupElement>
                    </smartForm:Group>
                </smartForm:SmartForm>
            </VBox>
        </content>
        <footer>
            <Toolbar >
                <content>
                    <ToolbarSpacer />
                    <Button text="Create" press="handle_createStepDialog_CreateButton" type="Emphasized"/>
                    <Button text="Cancel" press="handle_createStepDialog_CancelButton"></Button>
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>