<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:sap.ui.layout="sap.ui.layout">
    <Dialog title="Step Details" contentWidth="750px">
        <content>
            <smartForm:SmartForm>
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{StepName}" textLabel="Step Name"/>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField value="{StepType}" textLabel="Step Type"/>
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
            <Button text="Edit" press="handleDialogStepEditButton"/>
            <Button text="Cancel" press="handleDialogStepCloseButton"></Button>
        </content>
    </Dialog>
</core:FragmentDefinition>