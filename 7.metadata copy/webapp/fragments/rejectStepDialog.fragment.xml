<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">

    <Dialog id="dialog_RejectStep" title="Create Rejection Steps">
        <content>
            <VBox class="sapUiSmallMargin">
                <smartForm:SmartForm editable="true">
                    <smartForm:Group>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_rStepName" value="{StepName}" entitySet="ZP_QU_DG_STEPS" editable="false"></smartField:SmartField>
                        </smartForm:GroupElement>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_rStepSequence" value="{StepSequence}" entitySet="ZP_QU_DG_STEPS" editable="false"></smartField:SmartField>
                        </smartForm:GroupElement>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_rRejectionStepName" value="{RejectionStepName}" entitySet="ZP_QU_DG_STEP_REJ"></smartField:SmartField>
                        </smartForm:GroupElement>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_rRejectionStepSequence" value="{RejectionStepSeq}" entitySet="ZP_QU_DG_STEP_REJ"></smartField:SmartField>
                        </smartForm:GroupElement>
                    </smartForm:Group>
                </smartForm:SmartForm>
            </VBox>
        </content>
        <footer>
            <Toolbar >
                <content>
                    <ToolbarSpacer />
                    <Button text="Reject" press="handle_rejectStepDialog_RejectButton" type="Emphasized"/>
                    <Button text="Cancel" press="handle_rejectStepDialog_CancelButton"></Button>
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>