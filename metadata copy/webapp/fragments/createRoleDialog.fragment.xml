<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar">
    <Dialog id="dialog_assaignRoleToStep" title="Assaign a Role to a Step" contentWidth="750px">
        <content>
            <smartForm:SmartForm editable="true">
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartField:SmartField id="smartField_assaignStepName" value="{StepName}" entitySet="ZP_QU_DG_STEPS"></smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField id="smartField_assaignRoleName" value="{AssignedRole}" entitySet="ZP_QU_DG_STEPS_ROLE"></smartField:SmartField>
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
            <Button text="Assaign" press="handle_createRoleDialog_assaignButton"/>
            <Button text="Cancel" press="handle_createRoleDialog_cancelButton"></Button>
        </content>
    </Dialog>
</core:FragmentDefinition>