<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">
    <Dialog id="dialog_createProcess" title="Create New Process" contentWidth="500px">
        <content>
            <smartForm:SmartForm editable="true">
                <smartForm:Group>
                    <smartForm:GroupElement>
                        <smartField:SmartField id="smartField_newProcessName" value="{ProcessName}" entitySet="ZP_QU_DG_PROC_STEP_ROLE"></smartField:SmartField>
                    </smartForm:GroupElement>
                    <smartForm:GroupElement>
                        <smartField:SmartField id="smartField_newAction" value="{Action}" entitySet="ZP_QU_DG_PROC_STEP_ROLE"></smartField:SmartField>
                    </smartForm:GroupElement>
                </smartForm:Group>
            </smartForm:SmartForm>
            <Button text="Create" press="handleDialogCreateButton"/>
            <Button text="Cancel" press="handleDialogCancelButton"></Button>
        </content>
    </Dialog>
</core:FragmentDefinition>