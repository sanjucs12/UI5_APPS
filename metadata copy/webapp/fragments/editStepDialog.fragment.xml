<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:smartField="sap.ui.comp.smartfield"
    xmlns:smartForm="sap.ui.comp.smartform">

    <Dialog id="dialog_editStep" title="Edit Step Details">
        <content>
            <VBox class="sapUiSmallMargin">
                <smartForm:SmartForm editable="true">
                    <smartForm:Group>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_editStepName" value="{StepName}" entitySet="ZP_QU_DG_STEPS"></smartField:SmartField>
                        </smartForm:GroupElement>
                        <smartForm:GroupElement>
                            <smartField:SmartField id="smartField_editStepType" value="{StepType}" entitySet="ZP_QU_DG_STEPS"></smartField:SmartField>
                        </smartForm:GroupElement>
                    </smartForm:Group>
                </smartForm:SmartForm>
            </VBox>
        </content>
        <footer>
            <Toolbar >
                <content>
                    <ToolbarSpacer />
                    <Button text="Save" press="handle_editStepDialog_saveButton" type="Emphasized"/>
                    <Button text="Cancel" press="handle_editStepDialog_cancelButton"></Button>
                </content>
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>