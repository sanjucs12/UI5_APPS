<core:FragmentDefinition xmlns="sap.m"
    xmlns:core="sap.ui.core" templateShareable="false"
    xmlns:l="sap.ui.layout">
    <Dialog title="Document Details">
        <content>
            <l:Splitter width="100%">
              
                    <PDFViewer source="{/url}" width="auto" isTrustedSource="true">
                    </PDFViewer>
         

                <List items="{/items}">
                    <DisplayListItem label="{label}" value="{value}" />
                </List>
            </l:Splitter>
        </content>
        <endButton>
            <Button text="Cancel" press="closeInvoiceFragment" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
